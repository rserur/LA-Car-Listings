<h2>Create Manufacturer</h2>

<%= form_for @car do |f| %>

<% if @car.errors.any? %>

    <p>
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </p>

  <% end %>

  <p>
    <%= f.label :manufacturer %>
    <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name)%>
